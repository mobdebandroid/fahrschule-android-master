<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/relativeLayout1"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/navigation_background"
	android:fadingEdge="none">
		
	<ImageView
		android:id="@+id/imageView1"
		android:layout_height="54dp"
		android:layout_width="fill_parent"
		android:src="@drawable/navigation_indicator_background"
		android:scaleType="fitXY"
		android:layout_alignParentTop="true" />
		
	<ImageView
		android:id="@+id/indicatorIcon"
		android:layout_width="28dp"
		android:layout_height="28dp"
		android:layout_marginTop="8dp"
		android:layout_centerHorizontal="true"
		android:src="@drawable/ic_menu_lernen"
		android:scaleType="fitXY" />
		
	<TextView 
		android:id="@+id/indicatorTextView"
		android:text="TextView"
		android:textSize="10sp"
		android:textColor="@android:color/white"
		android:layout_below="@+id/indicatorIcon"
		android:layout_centerHorizontal="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
		
	<TextView
		android:id="@+id/indicatiorBadgeTextView"
		android:text="1"
		android:textSize="12sp"
		android:textStyle="bold"
		android:textColor="@android:color/white"
		android:background="@drawable/red_circle_background"
		android:visibility="gone"
		android:gravity="center_horizontal"
		android:layout_height="16dp"
		android:layout_width="16dp"
		android:layout_alignBottom="@+id/indicatorIcon"
		android:layout_alignRight="@+id/indicatorIcon" />
	
